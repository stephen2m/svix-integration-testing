{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "resolveJsonModule": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/koa-body", "./node_modules/@types"]
  },
  "include": ["src"]
}